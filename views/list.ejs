
<%- include("header") -%>

    <div class="box" id="heading">
        <% if (listTitle === "Saturday" || listTitle === "Sunday"){ %>
            <h1 style="color:rgb(202, 207, 207)"> <%= listTitle %></h1>
        <% } else { %>
            <h1 style="color:rgb(234, 234, 241)"> <%= listTitle %></h1>
        <% } %>
    </div>




<div class="box">

    <% for (let i = 0; i < newListItems.length; i++) { %>  
       
        <div class="item">
            <input type="checkbox">
            <p><%= newListItems[i] %></p>
        </div>
        
    <% } %>


    <form class="" action="/" method="post">
        <input type="text" name="nextTodo" placeholder="New item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>

</div>

